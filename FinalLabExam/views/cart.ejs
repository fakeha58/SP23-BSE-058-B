<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <!-- Fonts and Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body {
            background: url('https://via.placeholder.com/1500x800') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            font-family: 'Roboto', sans-serif;
            padding-top: 20px;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 30px;
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 10px;
        }

        h4 {
            font-family: 'Poppins', sans-serif;
            color: #fff;
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .table {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .table th, .table td {
            padding: 15px;
            text-align: center;
        }

        .table th {
            background: #007bff;
            color: #fff;
        }

        .table img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.2rem;
            font-weight: 600;
            color: #007bff;
            text-transform: uppercase;
        }

        .product-price, .product-description {
            color: #007bff;
        }

        .btn-success {
            width: 100%;
            padding: 15px;
            font-size: 18px;
            border-radius: 5px;
            background-color: #28a745;
            color: #fff;
        }

        .btn-danger {
            width: 100%;
            padding: 5px;
            font-size: 14px;
            border-radius: 5px;
            background-color: #dc3545;
            color: #fff;
        }

        .cart-summary {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .navbar {
            background: #343a40;
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
            font-weight: 600;
        }

        .nav-link:hover {
            color: #fca311 !important;
        }

        footer {
            background: #343a40;
            color: #fff;
            padding: 30px;
            text-align: center;
            margin-top: 50px;
        }

        footer a {
            color: #fca311;
            text-decoration: none;
        }

        footer a:hover {
            color: #fff;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ApnaFurniture.pk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/homepage">My Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">My Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Portfolio">About Me</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Bootstrap">Visit Main Site</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Cart Section -->
    <div class="container">
        <h4>Your Cart</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Details</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><img src="/<%= product.picture %>" alt="<%= product.title %>"></td>
                        <td><span class="product-title"><%= product.title %></span></td>
                        <td><span class="product-description"><%= product.description %></span></td>
                        <td><span class="product-price">PKR <%= product.price %></span></td>
                        <td>
                            <form action="/remove-from-cart/<%= product._id %>" method="GET">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Checkout -->
        <div class="cart-summary">
            <a href="/checkout" class="btn btn-success float-end">Proceed to Checkout</a>
        </div>
    </div>

</body>
</html>
