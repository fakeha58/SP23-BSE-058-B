<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: url('your-background-image-url.jpg') center/cover no-repeat; /* Set your background image */
      margin: 0;
      padding: 0;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #fff;
      margin-top: 50px;
      font-size: 2.5em;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background: rgba(255, 255, 255, 0.8); /* Light, semi-transparent background */
      border-radius: 8px;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #4CAF50; /* Green header background */
      color: #fff;
    }

    tr:hover {
      background-color: #f9f9f9;
    }

    ul {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    ul li {
      margin: 5px 0;
      color: #555;
      font-size: 0.95em;
    }

    a {
      color: #4CAF50;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Mobile-friendly styles */
    @media (max-width: 768px) {
      table {
        width: 100%;
      }

      h1 {
        font-size: 2em;
      }
    }
  </style>
</head>
<body>

  <h1>Order Summary</h1>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Delivery Address</th>
        <th>Payment Method</th>
        <th>Purchased Products</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.email %></td>
          <td><%= order.address %></td>
          <td><%= order.paymentMethod %></td>
          <td>
            <ul>
              <% order.products.forEach(product => { %>
                <li><%= product.title %></li>
              <% }); %>
            </ul>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>
